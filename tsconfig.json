{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"lib": ["es2022"],
		"outDir": "out",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"types": ["node", "vscode", "mocha"],
		"moduleResolution": "node"
	},
	"include": ["src", "test"],
	"exclude": ["node_modules", ".vscode-test"]
}
