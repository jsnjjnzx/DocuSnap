{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"lib": ["es2022"],
		"outDir": "out",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"types": ["node", "vscode" ],
		"moduleResolution": "node"
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
